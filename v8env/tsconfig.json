{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noLib": true,
    // "noUnusedLocals": true,
    // "skipLibCheck": true,
    "types": [],
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "out": "./docs/api/",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "plugin": "all",
    "mode": "modules",
    "theme": "./docs/theme/",
    "ignoreCompilerErrors": true
  },
  "files": [
    "./node_modules/typescript/lib/lib.esnext.d.ts",
    "./src/globals.ts"
  ]
}